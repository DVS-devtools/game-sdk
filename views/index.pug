doctype
html(lang='en')
    head
        meta(charset='utf-8')
        title SDK INTEGRATION ENV
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        script(src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.bundle.min.js", integrity="sha384-xrRywqdh3PHs8keKZN+8zzc5TX0GRTLCcmivcbNJWm2rs5C8PRhcEn3czEjhAO9o", crossorigin="anonymous")
        link(href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css", rel="stylesheet", integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T", crossorigin="anonymous")
    body
        nav(class='navbar navbar-light bg-light')
            a(class='navbar-brand' href='#') SDK :: INTEGRATION ENV


        div(class="card")
            div(class="card-header" style="background: black;color: white;") GAMES
            
            div(class="row")
                div(class="col-lg-4")
                    div(class="card-body")
                        each game in games
                            ul(class="list-group")
                                li(class="list-group-item" style="margin-top:5px;margin-bottom:5px;text-transform:uppercase;")= game
                                    div(style="float:right;")
                                        a(href="http://"+config.generic.local_domain+":"+config.generic.port+"/run/"+game) 
                                            button(type="button" class="btn btn-success") Play
                                                    
                                        a(href="http://"+config.generic.local_domain+":"+config.generic.port+"/build/"+game) 
                                            button(type="button" class="btn btn-warning") Build            
                                    
            
            
